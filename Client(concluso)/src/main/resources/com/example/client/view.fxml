<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" fillHeight="false" prefHeight="29.0" prefWidth="200.0" spacing="5.0" VBox.vgrow="ALWAYS">
      <children>
          <Button onAction="#displayMailList" text="Mail list" />
          <Button onAction="#selectMail" text="Select a mail" />
          <Button onAction="#removeMail" text="Remove" />
      </children>
   </HBox>
    <HBox alignment="CENTER" fillHeight="false" prefHeight="29.0" spacing="5.0" VBox.vgrow="ALWAYS">
        <Label fx:id="welcomeText" text="Valore per selezionare o rimuovere" />
        <TextField fx:id="input" opacity="0.3" />
    </HBox>
    <Label fx:id="resultText" text="" />
   <TextArea fx:id="area"/>
</VBox>
